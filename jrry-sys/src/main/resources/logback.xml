<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>/usr/local/var/log/jrry-sys.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/usr/local/var/log/jrry-sys-%d{yyyyMMdd}.log</fileNamePattern>
			<maxHistory>31</maxHistory>
			<totalSizeCap>3GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%-4r %d %-5level %logger{35} - %msg%n</pattern>
		</encoder>
	</appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-4r %d %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--<logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="DEBUG"/>-->
    <!--   <logger name="java.sql" level="DEBUG" /> -->
    <!--   <logger name="org.hibernate.SQL" level="DEBUG" /> -->
    <!--   <logger name="org.hibernate.type" level="TRACE" /> -->
    <!--   <logger name="org.springframework.jdbc.core" level="DEBUG" /> -->
    <!--   <logger name="org.springframework.jdbc.core.namedparam" level="DEBUG" /> -->
    <!--   <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="DEBUG"/> -->

	<root level="INFO">
		<appender-ref ref="FILE" />
	</root> 
</configuration>
